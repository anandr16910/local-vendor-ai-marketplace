{
  "name": "@local-vendor-ai/ai-services",
  "version": "1.0.0",
  "description": "AI/ML services for Local Vendor AI Marketplace",
  "main": "src/main.py",
  "scripts": {
    "dev": "python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "python -m uvicorn src.main:app --host 0.0.0.0 --port 8000",
    "test": "python -m pytest tests/ -v",
    "test:watch": "python -m pytest tests/ -v --watch",
    "test:coverage": "python -m pytest tests/ --cov=src --cov-report=html",
    "lint": "python -m flake8 src/ tests/",
    "format": "python -m black src/ tests/",
    "type-check": "python -m mypy src/"
  },
  "dependencies": {},
  "devDependencies": {}
}